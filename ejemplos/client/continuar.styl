body
  font-family arial
  background-color #ddd
  
.bloque
  padding 15px
  background-color #ddd
  border 1px solid aaa
  
#titulo
  font-family arial
  font-size 200%
  
.preguntas
  border-top 1px solid gray
  font-size 110%
  
.multiple
  font-size 110%
  
.texto
  border-top 1px solid gray
  font-size 110%
    
.opciones
  margin-top 12px
  font-size 110%
  
.opciones div
  margin-top 6px
  
.boolean div
  display inline-block
  padding-left 6px
  padding-right 6px
  
.celda
  padding 12px
  padding-left 24px
  
.aclaracion
  font-style italic
  font-size 90%
  
  
.codigo 
  display: none !important
  
.modo-revisar .codigo
  display: inherit !important
  float: left
  margin-right: 10px
  font-size: 90%
  color: magenta
  font-weight: bold
  
.multiple
  display inline
  
  
.conjunto-preguntas-multiples
  display table
  
.conjunto-preguntas-multiples > div
  display table-row

.conjunto-preguntas-multiples > div > .multiple
  padding-left 48px

.conjunto-preguntas-multiples > div > div
  display table-cell
  padding-left 12px
  
#div-modo-revisar
  display none
  
.provisorio
  color #B0B
  
.modal-contenido{
  background-color:rgba(0,100,100,.8);
  width:300px;
  padding: 10px 20px;
  margin: 20% auto;
  position: relative;
}
.modal{
  visibility:hidden;
  background-color: rgba(0,0,0,.8);
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;  
}

.number > input
  width 40px
  
[tedede-var="t4"]
  width 70px
  
.boton-abrir-formulario
  color #999

[tedede-disabled=disabled]{
  color #999
}

[tedede-disabled=disabled][deshabilitado=invisible]{
  display none
}

.option-more-info
  padding-left 30px

.mas-info-multiple div
  display inline
  padding-left 5px
  
.mas-info-multiple
  padding-left 10px