body
  font-family arial
  background-color white
 
#metadatos
  font-family arial
  margin 5px
  color magenta
  
@media (max-width: 480px)
  #logo-encuesta
    width 480px
    margin 0 0 20px 0
  
@media (min-width: 480px) and (max-width: 768px)
  #logo-encuesta
    width 100%
    margin 0 0 50px 0

@media (min-width: 768px) and (max-width: 1152px)
  #logo-encuesta
    width 768px
    margin 0 0 50px 0

@media (min-width: 1152px)
  #logo-encuesta
    width 67%
    margin 0 0 50px 0


p
  text-indent 2.0em

prettyButton()
  height 50px
  background-color blue
  color white
  font-family arial
  font-weight bold
  border 0px
  border-radius 15px
  font-size 110%
  margin-right 15px
  
#iniciar
  width 160px
  prettyButton()
 
#continuar
  width 250px
  prettyButton()
  
#nueva
  width 160px
  prettyButton()
  
#ingresado-fin
  width 160px
  prettyButton()