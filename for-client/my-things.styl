body
  margin 0px
  
#main_layout
  margin 8px

#status:empty
  display none
  
#status
  border-top 1px dotted #A88
  margin-top 5px
  padding-top 5px
  padding 3px
  font-size 80%
  
.status-error
  border 1px solid #B66
  color #B00
  padding 2px

.status-log
  border 1px solid #666
  color #BBB
  padding 2px

div100(n)
  return n / 100

pct(n)
  {n}\%
    opacity div100(n)
  
@keyframes pulse
    for num in 0 20 40 60 80 100
      pct(num)

@keyframes blink-animation
  to
    visibility hidden

@-webkit-keyframes blink-animation
  to
    visibility hidden

set-prop(prop, args)
  {prop} args
  -webkit-{prop} args

set-blink-animation()
  set-prop('animation', blink-animation arguments)

// configure animnation time
animation-time = 2s

[rec-status=blink]
  set-blink-animation animation-time steps(5, start)

[rec-status=pulse]
  animation-name pulse
  animation-duration animation-time

#keep-alive-signal
  position fixed
  left 0px
  top 0px
  height 15px
  width 15px
  border 1px solid black
  border-radius 4px
  font-size 70%
  text-align center
  z-index -1

.status-info
  font-size 80%
  font-weight bold
  margin-bottom 5px
  border-bottom 1px solid #997
  background-color #DDC

.status-info a
  margin 6px
