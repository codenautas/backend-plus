body
  font-family arial

#main-logo
  height 24px
  width 24px
  margin-right 16px

#right-menu
  float right
  
img.right-menu
  height 20px
  
#main-top-bar
  padding 4px
  padding-top 0px
  border-bottom 1px solid #AAA

#main-top-bar *
  vertical-align top
  margin-left 8px
  margin-top 4px

#mini-console
  display inline-block
  float right
  min-width 100px
  min-height 20px
  max-width 200px
  max-height 21px
  font-size 80%
  border 1px solid #A44
  background-color #ECC
  overflow hidden
  white-space pre-wrap

#mini-console:empty
  display none

.sub-menu-bar
  padding 4px
  border-bottom 1px solid #AAA
  padding-bottom 8px

.sub-menu-bar *
  vertical-align top
  margin-left 8px

#main-top-bar a.menu-item
  margin-top -1px

a.menu-item
  display inline-block
  font-family arial
  color black
  text-decoration none
  border 1px solid
  padding 4px
  background-color #ddd
  border-top 1px solid #eee
  border-left 1px solid #eee
  border-bottom 1px solid #ccc
  border-right 1px solid #ccc
  margin-top 0px

.top-menu-bar
  padding-top 0  

.sub-menu-bar
  padding-top 0  

.menu-item[menu-selected=yes]
  background-color #eee

.table-param-screen td
  border 4px solid transparent

.table-param-screen [contenteditable="true"]
  background-color white
