body
  font-family arial

#main-logo
  height 24px
  width 24px
  margin-right 16px

#right-menu-icon
  height 20px
  
#main-top-bar
  padding 4px
  padding-top 0px
  border-bottom 1px solid #AAA

img.light
  float right
  height 20px
  
#main-top-bar *
  vertical-align top
  margin-left 8px
  margin-top 4px

#mini-console
  display inline-block
  float right
  min-width 100px
  min-height 20px
  max-width 200px
  max-height 21px
  font-size 80%
  border 1px solid #A44
  background-color #ECC
  overflow hidden
  white-space pre-wrap

#mini-console:empty
  display none

.sub-menu-bar
  padding 4px
  border-bottom 1px solid #AAA
  padding-bottom 8px

.sub-menu-bar *
  vertical-align top
  margin-left 8px

#main-top-bar .menu-item
  margin-top -1px

#main_layout .menu-item
  color black
  border 1px solid
  background-color #ddd
  margin 0

.menu-item
  display inline-block
  font-family arial
  color black
  text-decoration none
  border 1px solid
  padding 4px
  background-color #ddd
  border-top 1px solid #eee
  border-left 1px solid #eee
  border-bottom 1px solid #ccc
  border-right 1px solid #ccc
  margin-top 0px
  &[bp-is-disabled=true]
    color #888
    cursor not-allowed

.top-menu-bar
  padding-top 0  
  @media print
    display none

.sub-menu-bar
  padding-top 0  
  @media print
    display none

.menu-item[menu-selected=yes]
  background-color #eee

.table-param-screen td
  border 4px solid transparent

.table-param-screen [contenteditable="true"]
  background-color white

.result-div
  min-height 40px
  padding 4px
  
.result-pre
  white-space pre
  
#cached-images
  display none
  
#not-logged
  display none
  float right

#right-menu-icon
  float right

#active-user
  float right  
  
.table-param-screen
  td[contenteditable="true"]
    border 1px solid #888
    
.div-loading-over
  position absolute 
  left 0px
  right 0px
  width 100%
  height 100%
  background rgba(240,240,240,0.5)
  
a.disabled 
  pointer-events none

.result-progress input:not(:checked)+label
  display none
.result-progress input:not(:checked)+label+div
  display none

.result-div, .json-result
  & > div > table
    border 1px solid #AAA
  table
    border-collapse collapse
    margin 0
  tr
    border-top 1px solid #AAA
    &:first-child
      border-top 0
  td
    border-left 1px solid #AAA
    padding 0
    &:first-child
      border-left 0
    &.plain-content
      padding 3px
      white-space pre-line
    &.attr-name
      padding 3px
      font-size 90%
      font-weight bold
      color #666
    &.row-num
      padding 3px
      font-size 80%
      text-align right
      color #777


