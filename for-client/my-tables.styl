.my-grid
  background rgb(230,230,230,0.5)

.my-grid caption
  background rgb(230,230,230,0.5)

border-table()
  border-bottom 2px solid #997
  border-top    2px solid #997
  border-left   2px solid #997
  border-right  2px solid #997
  margin 0px
  border-spacing 0px
  border-collapse collapse
  
.my-grid
  border-table()

nowrap()
  white-space pre
  overflow hidden
  max-width 300px
  
.my-grid td
  border-table()
  nowrap()

.my-grid tr td x
  border-bottom   2px solid #666
  border-top      2px solid #DDD

.my-grid th
  border-table()

.my-grid tbody th
  nowrap()

.my-grid caption
  border-table()

.my-grid tfoot
  color #777
  font-size 90%

.my-grid thead th
  white-space nowrap

[io-status=pending]
  background-color #CDE
  
[io-status=updating]
  background-color #ABC
  
[io-status=error]
  background-color #DAA

[io-status=temporal-ok]
  background-color #ADA

.table-button
  margin 0px
  border 0px
  padding 0px
.table-button:active
  background #EEE
.table-button img
  height 16px

.autoFilter
  width 30px
  
[has-filter='1'] 
  [when-filter=no] 
    display none
  [when-filter=yes] 
    display inherit

[has-filter='0']
  [when-filter=yes] 
    display none
  [when-filter=no] 
    display inherit

.filter-span
  display inline-block
  background-color #CEF
  min-height 20px
  min-width 20px
  